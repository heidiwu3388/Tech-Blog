<!-- Homepage -->
<div class="sub-heading d-flex flex-column align-items-center my-3">
  {{#if posts.length}}
  <h4 class="sub-heading"><em>Click the post title below to see the full content.</em></h5>
    {{else}}
    <h2><em>The blog has no post yet.</em></h2>
    <h2><em>Be the first to create a post. </em>
      {{#if loggedIn}}
      <em>Go to </em>
      <a href="/dashboard" class="text-decoration-none">
        <em>dashboard</em>
      </a>
      <em>.</em>
      {{else}}
      <a href="/login" class="text-decoration-none">
        <em>login</em>
      </a>
      {{/if}}
    </h2>
    {{/if}}
</div>
<!-- posts list -->
{{!-- render if posts are not empty --}}
{{#if posts.length}}
<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row post">
  <div class="col">
    <!-- post title -->
    <a href="/api/posts/{{post.id}}" class="text-decoration-none">
      <div class="title px-3 pt-3 pb-2 d-flex justify-content-between align-items-end flex-wrap ">
        <h3>{{post.title}}</h3>
        <em>~{{post.user.name}} on {{format_date post.date_created}}</em>
      </div>
    </a>
    <!-- trimmed post content -->
    <div class="trimmed-content px-3 py-2">
      <p>{{trim_string post.content 100}}</p>
    </div>
  </div>
</div>
{{/each}}
{{/if}}