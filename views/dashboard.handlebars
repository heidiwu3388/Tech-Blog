{{!-- render if posts are not empty --}}
{{#if posts.length}}
<div class="d-flex flex-column align-items-center mb-3">
  <h1 class="dashboard-heading">Your Dashboard</h1>
  <em>
    <h5 class="dashboard-heading">Click on the post for edit.</h5>
  </em>
</div>
<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col">
    <a class="text-decoration-none" href="/dashboard/edit/{{post.id}}">
      <div class="title title-only px-3 pt-3 pb-2 d-flex justify-content-between align-items-end flex-wrap ">
        <h3>{{post.title}}</h3>
        {{format_date post.date_created}}</em>
      </div>
    </a>
  </div>
</div>
{{/each}}
{{else}}
<h2 class="dashboard-heading">You haven't had any post yet!</h2>
<h2 class="dashboard-heading">Create one by clicking the above button!</h2>
{{/if}}