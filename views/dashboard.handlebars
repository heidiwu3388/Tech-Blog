<!-- Dashboard -->
<div class="d-flex flex-column align-items-center mb-3">
  <h1 class="sub-heading">It's Your Dashboard !</h1>
  <a href="/dashboard/new" class="btn btn-lg btn-primary mb-2" id="btn-add-new-post">+ New Post</a>
  {{#if posts.length}}
  <em>
    <h5 class="sub-heading">Add a post? Click the button above.</h5>
  </em>
  <em>
    <h5 class="sub-heading">Edit your post? Click the post title below.</h5>
  </em>
  {{else}}
  <em>
    <h5 class="sub-heading">You haven't had any post yet!</h5>
  </em>
  <em>
    <h5 class="sub-heading">Create one by clicking the above button!</h5>
  </em>
  {{/if}}
</div>
{{!-- render if posts are not empty --}}
{{#if posts.length}}
{{!-- Loop over each object in the posts array --}}
{{#each posts as |post| }}
<div class="row post">
  <div class="col">
    <!-- post title -->
    <a class="text-decoration-none" href="/dashboard/edit/{{post.id}}">
      <div class="title px-3 pt-3 pb-2 d-flex justify-content-between align-items-end flex-wrap ">
        <h3>{{post.title}}</h3>
        {{format_date post.date_created}}</em>
      </div>
    </a>
    <!-- trimmed post content -->
    <div class="trimmed-content px-3 py-2">
      <p>{{trim_string post.content 100}}</p>
    </div>
  </div>
</div>
{{/each}}
{{/if}}