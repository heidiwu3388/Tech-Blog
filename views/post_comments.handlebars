<!-- Single post -->
<div class="row mb-4 post">
  <div class="col" id="single-post" data-post-id={{post.id}}>
    <div class="title px-3 pt-3 pb-2 d-flex justify-content-between align-items-end flex-wrap ">
      <h3>{{post.title}}</h3>
      <em>~{{post.user.name}} on {{format_date post.date_created}}</em>
    </div>
    <div class="content p-3">
      <p>{{post.content}}</p>
    </div>
  </div>
</div>

<!-- Add Comment -->
{{#if loggedIn}}
<div class="row mb-4">
  <div class="col">
    <form class="add-comment-form py-3">
      <div class="mb-2">
        <textarea class="form-control" maxlength="1000" id="comment-text" rows="2" placeholder="Leave a comment"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
{{else}}
<div class="row mb-4">
  <div class="col">
    <p class="text-center">Please <a href="/login" class="text-decoration-none">login</a> to leave a comment.</p>
  </div>
</div>
{{/if}}
<!-- Multiple comments -->
{{#each post.comments as |comment| }}
<div class="row">
  <div class="col">
    <em class="comment-by">~{{comment.user.name}} on {{format_date comment.date_created}}</em>
    <div class="py-2">
      <p>{{comment.text}}</p>
    </div>
  </div>
</div>
<hr>
{{/each}}

{{! Path: public/js/comment.js }}
<script src="/js/comment.js"></script>
